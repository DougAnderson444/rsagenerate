{
	"name": "sveltekit-rust-wasm",
	"version": "0.0.1",
	"scripts": {
		"dev": "npm run watch:wasm && svelte-kit dev",
		"build": "npm run build:wasm && svelte-kit build",
		"build:wasm": "wasm-pack build ./wasm --target web --release",
		"watch:wasm": "cd wasm && cargo watch -i .gitignore -i \"pkg/*\" -i \"target/*\" -s \"wasm-pack build --target web --dev\"",
		"package": "svelte-kit package",
		"preview": "svelte-kit preview",
		"prepare": "svelte-kit sync",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "next",
		"@sveltejs/kit": "next",
		"prettier": "^2.5.1",
		"prettier-plugin-svelte": "^2.5.0",
		"svelte": "^3.44.0",
		"svelte-preprocess": "^4.10.1",
		"vite-plugin-wasm-pack": "^0.1.10"
	},
	"type": "module"
}
